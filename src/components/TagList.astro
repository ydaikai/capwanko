---
import type { Tag } from '../lib/microcms'

interface Props {
	tags?: Tag[]
}

const { tags } = Astro.props
---

{
	tags && tags.length > 0 && (
		<div class='flex flex-wrap gap-2 mb-4'>
			{tags.map((tag) => (
				<span class='inline-flex items-center px-3 py-1 rounded-full text-sm bg-gray-100 text-gray-700 hover:bg-gray-200 transition-colors'>
					<svg
						class='w-4 h-4 mr-1'
						viewBox='0 0 24 24'
						fill='none'
						stroke='currentColor'
						stroke-width='2'
					>
						<path d='M7 7h.01M7 3h5a1.99 1.99 0 0 1 1.414.586l7 7a2 2 0 0 1 0 2.828l-7 7a2 2 0 0 1-2.828 0l-7-7A1.995 1.995 0 0 1 3 12V7a4 4 0 0 1 4-4z' />
					</svg>
					{tag.name}
				</span>
			))}
		</div>
	)
}
